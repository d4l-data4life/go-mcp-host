# General Configuration
GO_SVC_TEMPLATE_DEBUG=true
GO_SVC_TEMPLATE_HUMAN_READABLE_LOGS=true
GO_SVC_TEMPLATE_DEBUG_CORS=false
GO_SVC_TEMPLATE_PORT=8080

# CORS Configuration - Allow frontend origins
GO_SVC_TEMPLATE_CORS_HOSTS=http://localhost:8081 http://localhost:3000 http://localhost:3456 https://localhost:3000

# HTTP Server Configuration
GO_SVC_TEMPLATE_HTTP_MAX_PARALLEL_REQUESTS=8
GO_SVC_TEMPLATE_HTTP_REQUEST_TIMEOUT=30s

# Database Configuration
GO_SVC_TEMPLATE_DB_HOST=localhost
GO_SVC_TEMPLATE_DB_PORT=6000
GO_SVC_TEMPLATE_DB_NAME=go-mcp-host
GO_SVC_TEMPLATE_DB_SCHEMA=public
GO_SVC_TEMPLATE_DB_USER=go-mcp-host
GO_SVC_TEMPLATE_DB_PASS=postgres
GO_SVC_TEMPLATE_DB_SSL_MODE=disable

# JWT Configuration
GO_SVC_TEMPLATE_JWT_KEY_PATH=PATH_PLACEHOLDER/test-keys/jwt.key

# Ollama Configuration
GO_SVC_TEMPLATE_OLLAMA_BASE_URL=http://localhost:11434
GO_SVC_TEMPLATE_OLLAMA_DEFAULT_MODEL=llama3.2

# MCP Configuration File
GO_SVC_TEMPLATE_MCP_CONFIG_PATH=PATH_PLACEHOLDER/config.yaml
